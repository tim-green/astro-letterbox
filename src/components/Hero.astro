---
import Magic from '../assets/magic-trick-front-color.png'
import PictureColor from '../assets/picture-front-color.png'
import Folder from '../assets/folder-front.png'
import MailDyn from '../assets/mail-dynamic-color.png'
import Computer from '../assets/computer-front-color.png'
---


<section class="product-hero">
    <div class="container">
        <div class="d-table">
            <div class="d-table-cell center">
                <div class="hero-copy">
                    <h1 class="hero-title">Deliver Every Email Like It Matters</h1>
                    <p> Stop worrying about spam folders and missed connections. Letterbox is your reliable SMTP service built for developers, marketers, and teams who need every message to land where it counts — the inbox.  </p>
                    <div class="product-cta">
                      <a href="#" class="button button-primary u-full-width">Start Trial — It's Free</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-media">
            <img src={Magic.src} alt="Dynamite">
            <img src={PictureColor.src} alt="PictureColor">
            <img src={Folder.src} alt="Folder">
            <img src={MailDyn.src} alt="Money">
            <img src={Computer.src} alt="Gift">
        </div>
    </div>
 </section>

 <style lang="scss">


.product-hero{
  padding: 50px 0;
  .container{
    position: relative;
    .d-table{
      height: 500px;
     }
  }
  .hero-media{
    padding: 5px;
    border-radius: 48px;
  }
  .hero-copy{
    h1, p{
      max-width: 600px;
      margin: 20px auto;
    }
  }
  .hero-media{
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:700px) {
      img{
        &:nth-child(2), &:nth-child(3),
        &:nth-child(4){
          display: none;
        }
      }
    }
  }
}

 </style>